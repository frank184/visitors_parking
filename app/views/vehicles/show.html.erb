<h2><%= current_user.first_name %>'s Vehicle</h2>
<hr>
<%= form_for @vehicle do |f| %>
  <div class="form-group">
    <%= f.label :license_plate %>
    <%= content_tag(:span, @vehicle.license_plate, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :manufacturer %>
    <%= content_tag(:span, @vehicle.manufacturer, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :model %>
    <%= content_tag(:span, @vehicle.model, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= content_tag(:span, @vehicle.year, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :colour %>
    <%= content_tag(:span, @vehicle.colour, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :paid %>
    <%= content_tag(:span, @vehicle.paid?, class: "pull-right") %>
  </div>

  <div class="form-group">
    <%= f.label :owner %>
    <%= content_tag(:span, @vehicle.user.email, class: "pull-right") %>
  </div>

  <hr>

  <div class="form-group pull-right">
    <div class="btn-group" role="group">
      <%= link_to "Back", :back, class: "btn btn-lg btn-default" %>
      <%= link_to "Edit", edit_vehicle_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
  <%= link_to "Delete", vehicle_path(@vehicle), class: "btn btn-lg btn-default", method: :delete, data: { confirm: "Are you sure ?"} %>
<% end %>
