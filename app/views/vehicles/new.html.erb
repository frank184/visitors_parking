<div class="row">
  <div class="col-lg-offset-2 col-lg-8">
    <h2>Register a Vehicle</h2>
    <hr>
    <%= form_for @vehicle do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :license_plate %>
        <%= f.text_field :license_plate, class: "form-control",  autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :colour %>
        <%= f.text_field :colour, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :manufacturer %>
        <%= f.text_field :manufacturer, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :model %>
        <%= f.text_field :model, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :year %>
        <%= f.text_field :year, class: "form-control" %>
      </div>

      <hr>

      <div class="form-group pull-right">
        <%= f.submit "Register", class: "btn btn-lg btn-primary" %>
        <%= link_to "Back", root_path, class: "btn btn-lg btn-default" %>
      </div>
    <% end %>
  </div>
</div>
