<div class="row">
  <div class="col-lg-offset-2 col-lg-8">
    <h2><%= yield(:title) =%></h2>
    <hr>
    <%= form_for @vehicle do |f| %>

      <div class="form-group">
        <%= f.label :license_plate %><br />
        <%= f.text_field :license_plate, class: "form-control",  autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :colour %><br />
        <%= f.text_field :colour, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :manufacturer %><br />
        <%= f.text_field :manufacturer, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :model %><br />
        <%= f.text_field :model, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :year %><br />
        <%= f.text_field :year, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Register Car!", class: "btn btn-lg btn-primary" %>
      </div>

    <% end %>
    <hr>
  </div>
</div>
