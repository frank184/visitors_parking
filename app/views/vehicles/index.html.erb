<div class="inline-heading">
  <h1>Vehicles</h1>
  <h3>
    <%= link_to  new_vehicle_path, class: "pull-right" do %>
      Add<%= icon "car" %>
    <% end %>
  </h3>
</div>
<hr>
<% if @vehicles.empty? %>
  <p>No Vehicle Registered</p>
<% else %>
  <table>
    <%= @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.license_plate %></td>
        <td><%= vehicle.colour %></td>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>

        <td><%= link_to "Edit", edit_vehicle_path %></td>
        <td><%= link_to "Show", vehicle_path %></td>
      </tr>
    <% end %>
  </table>
<% end %>
